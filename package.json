{
  "name": "@eldrforge/git-tools",
  "version": "0.1.13",
  "description": "Git utilities for automation - secure process execution and Git operations",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/calenvarek/git-tools.git"
  },
  "scripts": {
    "build": "npm run lint && tsc --noEmit && vite build",
    "dev": "vite",
    "watch": "vite build --watch",
    "test": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "clean": "rm -rf dist",
    "precommit": "npm run clean && npm run build && npm run lint && npm run test",
    "prepublishOnly": "npm run clean && npm run lint && npm run build && npm run test"
  },
  "keywords": [
    "git",
    "git-tools",
    "automation",
    "process-execution",
    "secure-exec"
  ],
  "author": "Calen Varek <calenvarek@gmail.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "@types/semver": "^7.7.0",
    "semver": "^7.7.2",
    "shell-escape": "^0.2.0"
  },
  "peerDependencies": {
    "winston": "^3.17.0"
  },
  "peerDependenciesMeta": {
    "winston": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.33.0",
    "@swc/core": "^1.13.3",
    "@types/node": "^24.2.1",
    "@types/shell-escape": "^0.2.3",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitest/coverage-v8": "^4.0.13",
    "esbuild": "0.25.10",
    "eslint": "^9.33.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "mockdate": "^3.0.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.3.0",
    "vite-plugin-node": "^7.0.0",
    "vitest": "^4.0.13",
    "winston": "^3.17.0"
  }
}
